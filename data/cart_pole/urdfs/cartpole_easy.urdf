<?xml version="1.0"?>

<robot name="UndampedCartPole">

  <link name="cart">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.94" />
    </inertial>
  </link>

  <link name="pendulum">
    <inertial>
      <origin xyz="0 0 0.1778" />
      <mass value="0.127" />
    </inertial>
  </link>

  <joint name="x" type="prismatic">
    <parent link="world" />
    <child link="cart" />
    <axis xyz="1 0 0" />
  </joint>

  <joint name="theta" type="continuous">
    <parent link="cart" />
    <child link="pendulum" />
    <axis xyz="0 -1 0" />
  </joint>

  <transmission type="SimpleTransmission" name="base_force">
    <actuator name="force" />
    <joint name="x" />
  </transmission>

</robot>